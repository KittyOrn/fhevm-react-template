{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building confidential dApps with multiple framework examples",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "build:examples": "npm run build --workspaces --if-present",
    "dev": "echo 'Choose an example: npm run dev:nextjs | npm run dev:react | npm run dev:voting'",
    "dev:nextjs": "cd examples/nextjs-example && npm run dev",
    "dev:react": "cd examples/react-example && npm run dev",
    "dev:voting": "cd examples/privacy-voting && npm run dev",
    "install:all": "npm install && npm install --workspaces",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules packages/*/dist",
    "lint": "npm run lint --workspaces --if-present",
    "test": "npm run test --workspaces --if-present",
    "format": "prettier --write \"**/*.{js,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,ts,tsx,json,md}\""
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "blockchain",
    "zama",
    "ethereum",
    "sdk",
    "react",
    "nextjs",
    "vue"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "prettier": "^3.2.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
